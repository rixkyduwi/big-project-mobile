<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.garbage.classification">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <dist:module dist:instant="true" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Widget.MaterialComponents.TabLayout">
        <activity
            android:name="com.garbage.classification.Splashscreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.garbage.classification.Login"
            android:exported="true"/>
        <activity
            android:name="com.garbage.classification.Register"
            android:exported="true"/>
        <activity
            android:name="com.garbage.classification.Profiluser"
            android:exported="true"/>
        <activity
            android:name="com.garbage.classification.Menu"
            android:exported="true"/>
        <activity
            android:name="com.garbage.classification.Scan"
            android:exported="true"/>
        <activity
            android:name="com.garbage.classification.Chatbot"
            android:exported="true"/>
        <provider
            android:authorities="${applicationId}.fileprovider"
            android:name="androidx.core.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>